{
	"name": "addon",
	"version": "0.0.0",
	"main": "dist/index.js",
	"repository": "git@github.com:dimitarnestorov/snooze-for-gmail.git",
	"author": "Dimitar Nestorov <opensource@dimitarnestorov.com> (https://dimitarnestorov.com)",
	"license": "MIT",
	"private": true,
	"scripts": {
		"rm-dist": "rimraf dist",
		"build-webpack": "webpack-cli --mode production",
		"push-clasp": "clasp push",
		"build+push": "yarn run rm-dist && yarn run build-webpack && yarn run push-clasp",
		"watch-webpack": "webpack-cli --watch --mode development",
		"watch-clasp": "sleep 5 && clasp push --watch --force",
		"watch": "yarn run rm-dist && concurrently yarn:watch-webpack yarn:watch-clasp"
	},
	"devDependencies": {
		"@types/google-apps-script": "^0.0.34"
	}
}
