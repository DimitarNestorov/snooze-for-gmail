{
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"watch-addon": "yarn --cwd ./packages/addon run watch",
		"deploy-functions": "yarn --cwd ./packages/functions run deploy",
		"build-shared": "yarn --cwd ./packages/shared run build",
		"postinstall": "patch-package"
	},
	"husky": {
		"hooks": {
			"post-checkout": "yarn run build-shared",
			"pre-commit": "yarn run build-shared"
		}
	},
	"devDependencies": {
		"@google/clasp": "^1.7.0",
		"concurrently": "^4.1.0",
		"copy-webpack-plugin": "^4.6.0",
		"fork-ts-checker-webpack-plugin": "^0.5.2",
		"husky": "^1.3.1",
		"patch-package": "^5.1.1",
		"postinstall-postinstall": "^2.0.0",
		"rimraf": "^2.6.2",
		"ts-loader": "^5.3.2",
		"tslint": "^5.12.0",
		"typescript": "^3.2.2",
		"webpack": "^4.28.3",
		"webpack-cli": "^3.1.2"
	}
}
